const response = await fetch(
  "https://jsonplaceholder.typicode.com/posts",
);

const posts = await response.json();

console.log(posts);
---

<h1>Fecth de datos API</h1>

<ul>
  {
    posts.map((post) => (
      <div>
        <h5>{post.userId}</h5>
        <h3>{post.title}</h3>
        <p>{post.content}</p>
      </div>
    ))
  }
</ul>

